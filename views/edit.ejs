<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>">
		</div>
		<div class="field">
			<label>Content</label>
			<textarea name="blog[body]" placeholder="What's on your mind..."><%= blog.body %></textarea>
		</div>
		<div class="field">
			<input class="ui violet massive basic button" type="submit">
		</div>
	</form>
</div>

<% include partials/footer %>